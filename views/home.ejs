<div class="container">
    <section id="addData" class="hidden">
        <form action="/add" method="post">
            <input type="text" name="fname" placeholder="First Name">
            <input type="text" name="midname" placeholder="Middle Name">
            <input type="text" name="lname" placeholder="Last Name">
            <input type="text" name="current_addres" placeholder="Current Address">
            <input type="text" name="permanent_address" placeholder="Permanent Adrress">
            <input type="number" name="age" placeholder="Age">
            <input type="date" name="birthday" placeholder="Birthday">
            <input type="submit" name="submit" value="Add">
        </form>
    </section>
    
    <section class="container">
        <button id="toggle">toggle</button>
        <table class="">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Middle Name</th>
                    <th>Last Name</th>
                    <th>Current Address</th>
                    <th>Permanent Address</th>
                    <th>Age</th>
                    <th>Birthday</th>
                </tr>
            </thead>
            <% if(locals.data){  %>
            <%data.forEach(function(user){ %>
            <tbody>
                <tr>
                    <td hidden><% user.id %></td>
                    <td><%= user.first_name %></td>
                    <td><%= user.middle_name %></td>
                    <td><%= user.last_name %></td>
                    <td><%= user.current_address %></td>
                    <td><%= user.permanent_address %></td>
                    <td><%= user.age %></td>
                    <td><%= user.birth_date %></td>  
                    <td><a href="/user/<%- user.id%>">update</a></td>
                </tr>
            </tbody>
           
            <% }); }%> 
        </table>
    </section>

</div>

<script>
    document.getElementById("toggle").addEventListener("click", function() {
        console.log("test")
        document.getElementById("addData").classList.toggle("hidden");
    });
</script>

                
           
             
                     
                    